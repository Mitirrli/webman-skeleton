{
  "name": "workerman/webman",
  "type": "project",
  "keywords": [
    "high performance",
    "http service"
  ],
  "homepage": "http://www.workerman.net",
  "license": "MIT",
  "description": "High performance HTTP Service Framework.",
  "authors": [
    {
      "name": "walkor",
      "email": "walkor@workerman.net",
      "homepage": "http://www.workerman.net",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "walkor@workerman.net",
    "issues": "https://github.com/walkor/webman/issues",
    "forum": "http://wenda.workerman.net/",
    "wiki": "http://workerman.net/doc/webman",
    "source": "https://github.com/walkor/webman"
  },
  "require": {
    "php": ">=7.2",
    "workerman/webman-framework": "^1.0",
    "monolog/monolog": "^2.0",
    "vlucas/phpdotenv": ">=4.1,<6.0",
    "robmorgan/phinx": "^0.12.6",
    "fzaninotto/faker": "^1.5",
    "illuminate/database": "^8.37",
    "workerman/crontab": "^1.0",
    "php-di/php-di": "^6.3",
    "doctrine/annotations": "^1.12",
    "brainmaestro/composer-git-hooks": "^2.8"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "friendsofphp/php-cs-fixer": "^2.18"
  },
  "suggest": {
    "ext-event": "For better performance. "
  },
  "extra": {
    "hooks": {
      "config": {
        "stop-on-failure": ["pre-commit", "pre-push"]
      },
      "pre-commit": [
        "composer test",
        "composer check-style"
      ],
      "pre-push": [
        "composer test",
        "composer cs-fix"
      ]
    }
  },
  "autoload": {
    "psr-4": {
      "app\\": "app/"
    },
    "files": [
      "./support/helpers.php"
    ]
  },
  "scripts": {
    "post-autoload-dump": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-merge": "composer install",
    "post-install-cmd": [
      "cghooks add --ignore-lock",
      "cghooks update"
    ],
    "cghooks": "vendor/bin/cghooks",
    "test": "vendor/bin/phpunit --colors=always --testdox",
    "check-style": "php-cs-fixer fix --using-cache=no --diff --config=.php_cs --dry-run --ansi",
    "cs-fix": "php-cs-fixer fix --using-cache=no --config=.php_cs --ansi"
  },
  "scripts-descriptions": {
    "test": "Run all tests.",
    "check-style": "Run style checks (only dry run - no fixing!).",
    "cs-fix": "Run style checks and fix violations."
  }
}
